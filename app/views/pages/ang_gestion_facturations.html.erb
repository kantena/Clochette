<head>
  <title> @page_title </title>
</head>

<body>
  <h1> Gestion des facturations </h1>

  <div id="liste_clients_nb_jours à facturer">
    <table border width="600">
      <thead>
        <tr>
          <th>Client</th>
          <th>Nombre de jours à facturer du mois courant</th>
        </tr>
      </thead>

      <tbody>
        <% @infos_client_mois_courant.each do |nom_client, nb_jours_a_facturer | %>
          <tr>
            <td><%=nom_client %></td>
            <td><%=nb_jours_a_facturer %></td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</body>